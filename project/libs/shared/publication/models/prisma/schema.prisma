generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model VideoPublic {
  id       String   @id @default(uuid()) @map("id")
  title    String
  link     String
  tags     Tag[]
  createAt DateTime @default(now()) @map("create_at")
  updateAt DateTime @updatedAt @map("update_at")
  userId   String   @map("user_id")

  @@index([title])
  @@map("video_publics")
}

model TextPublic {
  id       String   @id @default(uuid()) @map("id")
  title    String
  notice   String
  text     String
  tags     Tag[]
  createAt DateTime @default(now()) @map("create_at")
  updateAt DateTime @updatedAt @map("update_at")
  userId   String   @map("user_id")

  @@index([title])
  @@map("text_publics")
}

model QuotePublic {
  id       String   @id @default(uuid()) @map("id")
  text     String
  author   String
  tags     Tag[]
  createAt DateTime @default(now()) @map("create_at")
  updateAt DateTime @updatedAt @map("update_at")
  userId   String   @map("user_id")

  @@index([text])
  @@map("quote_publics")
}

model PhotoPublic {
  id       String   @id @default(uuid()) @map("id")
  photo    String
  tags     Tag[]
  createAt DateTime @default(now()) @map("create_at")
  updateAt DateTime @updatedAt @map("update_at")
  userId   String   @map("user_id")

  @@map("photo_publics")
}

model LinkPublic {
  id          String   @id @default(uuid()) @map("id")
  link        String
  description String
  tags        Tag[]
  createAt    DateTime @default(now()) @map("create_at")
  updateAt    DateTime @updatedAt @map("update_at")
  userId      String   @map("user_id")

  @@map("link_publics")
}

model Tag {
  id           String        @id @default(uuid()) @map("id")
  title        String
  videoPublics VideoPublic[]
  textPublics  TextPublic[]
  quotePublic  QuotePublic[]
  photoPublics PhotoPublic[]
  linkPublics  LinkPublic[]
  createAt     DateTime      @default(now()) @map("create_at")
  updateAt     DateTime      @updatedAt @map("update_at")

  @@index([title])
  @@map("tags")
}
